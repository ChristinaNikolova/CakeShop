@using CakeShop.Web.ViewModels.Administration.Orders.ViewModels;
@model IEnumerable<OrderViewModel>

<section class="wishlist spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="wishlist__cart__table">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Total Price</th>
                                <th>Paid</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td class="product__cart__item">@order.FormattedFinalizeOrder</td>
                                    <td class="cart__price">$ @order.TotalPrice</td>
                                    <td class="cart__stock">@order.PaidAsString</td>
                                    <td class="cart__btn"><a asp-area="Administration" asp-controller="Orders" asp-action="Manage" asp-route-id="@order.Id" class="site-btn">Manage</a></td>
                                    <td class="cart__close">
                                        <form method="post" asp-area="Administration" asp-controller="Orders" asp-action="Delete" asp-route-id="@order.Id">
                                            <button type="submit" class="site-btn">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>