@using CakeShop.Web.ViewModels.Administration.Ingredients.InputModels;
@model UpdateIngredientInputModel;

@{
    this.ViewData["Title"] = "Update";
}

<partial name="_BreadCrumbPartial" />
<div class="row">
    <div class="col-lg-8">
        <div class="class__form">
            <form asp-area="Administration" asp-controller="Ingredients" asp-action="Update" method="post" class="mt-4 update-section">
                <input asp-for="@Model.Id" type="hidden" />
                <div class="form-group col-md-10 pt-2">
                    <label asp-for="@Model.Name"></label>
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div>
                    <div class="row">
                        <div class="form-group col-md-3 mt-4 ml-5">
                            <button type="submit" class="site-btn mb-4 danger">Update</button>
                        </div>
                        <div class="form-group col-md-3 mt-4 ml-5">
                            <a class="site-btn mb-4">Back</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>