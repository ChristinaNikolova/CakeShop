@using CakeShop.Web.ViewModels.Administration.Users.ViewModels;
@model AllUsersAdminInputModel;

@{
    this.ViewData["Title"] = "Users";
}

<partial name="_BreadCrumbPartial" />
<section class="wishlist spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="wishlist__cart__table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Orders</th>
                                <th>Total Sum</th>
                                <th>Comments</th>
                                <th>Reviews</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td class="cart__price">@user.UserName</td>
                                    <td class="cart__price">@user.Email</td>
                                    <td class="cart__stock">@user.OrdersCount</td>
                                    <td class="cart__stock">@user.TotalSumOrders</td>
                                    <td class="cart__stock">@user.CommentsCount</td>
                                    <td class="cart__stock">@user.ReviewsCount</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/loadDataTable.js" asp-append-version="true"></script>
    <script>loadDataTable();</script>
}
