@using CakeShop.Web.ViewModels.Orders.ViewModels
@model OrderPDFViewModel;

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Order</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link href="~/lib/fontawesome/css/all.css" rel="stylesheet" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700;800;900&display=swap"
          rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800;900&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="~/css/flaticon.css" type="text/css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/barfiller.css" type="text/css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/magnific-popup.css" type="text/css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/font-awesome.min.css" type="text/css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/elegant-icons.css" type="text/css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/nice-select.css" type="text/css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css" type="text/css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/slicknav.min.css" type="text/css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/style.css" type="text/css" asp-append-version="true">
    <link href="~/lib/datatables/media/css/jquery.dataTables.css" rel="stylesheet" asp-append-version="true" />

    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
</head>
<body>
    <section class="shopping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-7">
                    <div class="shopping__cart__table">
                        <div class="col-lg-5">
                            <div class="cart__total">
                                <h6>Order</h6>
                                <ul>
                                    <li>Paid: <span>@Model.PaidAsString</span></li>
                                    <li>Order Status: <span>@Model.Status</span></li>
                                    <li>Order Date: <span>@Model.FormattedFinalizeOrder</span></li>
                                    <li>Total Sum: <span>$ @Model.TotalPrice</span></li>
                                </ul>
                                <div class="mt-3">
                                    <h6>Client</h6>
                                    <ul>
                                        <li>First Name: <span>@Model.User.FirstName</span></li>
                                        <li>Last Name: <span>@Model.User.LastName</span></li>
                                        <li>Phone: <span>@Model.User.PhoneNumber</span></li>
                                        <li>Email: <span>@Model.User.Email</span></li>
                                        <li>Delivery: <span>@Model.DeliveryAddress</span></li>
                                        @if (Model.Notes != null)
                                        {
                                            <li>Notes: <span>@Model.Notes</span></li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <table>
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="desserts-in-basket">
                                @foreach (var dessert in Model.DessertsInBasket)
                                {
                                    <tr>
                                        <td class="product__cart__item">
                                            <div class="product__cart__item__pic">
                                                <a asp-area="" asp-controller="Shop" asp-action="DessertDetails" asp-route-id="@dessert.DessertId">
                                                    <img class="small-pic" src="@dessert.DessertPicture" alt="dessert">
                                                </a>
                                            </div>
                                            <div class="product__cart__item__text">
                                                <h6><a asp-area="" asp-controller="Shop" asp-action="DessertDetails" asp-route-id="@dessert.DessertId" class="color-black">@dessert.DessertName</a></h6>
                                                <h5>$ @dessert.DessertPrice</h5>
                                            </div>
                                        </td>
                                        <td class="quantity__item">
                                            <div class="quantity">
                                                <div class="dessert-quantity">
                                                    @dessert.Quantity
                                                </div>
                                            </div>
                                        </td>
                                        <td class="cart__price">$ @dessert.TotalPrice</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
