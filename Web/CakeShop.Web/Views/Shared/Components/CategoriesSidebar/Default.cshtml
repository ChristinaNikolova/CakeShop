@using CakeShop.Web.ViewModels.Categories.ViewModels;
@model AllCategorySidebarViewModel;


<div class="blog__sidebar__item">
    <h5>Categories</h5>
    <div class="blog__sidebar__item__categories">
        <ul>
            @foreach (var category in Model.Categories)
            {
                <li><a asp-area="" asp-controller="Recipes" asp-action="AllByCategory" asp-route-id="@category.Id">@category.Name <span>@category.RecipesCount</span></a></li>
            }
        </ul>
    </div>
</div>