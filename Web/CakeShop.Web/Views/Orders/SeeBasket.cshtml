@using CakeShop.Web.ViewModels.Orders.ViewModels;
@model AllDessertsBasketViewModel;

@{
    var orderId = Model.DessertsInBasket.Select(deo => deo.OrderId).FirstOrDefault();
}

<partial name="_SeeBasketBreadCrumbPartial" />
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <partial name="_DessertListDetailsPartial" model="Model" />
            <vc:get-total-price-and-quantities-current-order order-id=@orderId></vc:get-total-price-and-quantities-current-order>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/removeFromBasket.js" asp-append-version="true"></script>
    <script>removeFromBasket(event);</script>
}