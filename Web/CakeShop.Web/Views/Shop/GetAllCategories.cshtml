@using CakeShop.Web.ViewModels.Categories.ViewModels;
@model AllCategoriesViewModel;

@{
    ViewData["Title"] = "Categories";
}

<div class="offset-1">
    <h2 class="mb-2 mt-2 text-center">Shop by categories</h2>
    <div class="categories">
        <div class="container">
            <div class="row">
                @foreach (var category in Model.Categories)
                {
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top" src="@category.Picture" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">@category.Name</h5>
                            <p class="card-text">@category.Description</p>
                            <a asp-area="" asp-controller="Shop" asp-action="GetAllCurrentCategory" asp-route-id="@category.Id" class="site-btn">Shop now</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
