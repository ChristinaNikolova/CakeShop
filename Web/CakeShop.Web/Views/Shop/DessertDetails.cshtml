@using CakeShop.Web.ViewModels.Desserts.ViewModels;
@model DessertDetailsViewModel;

<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="breadcrumb__text">
                    <h2 class="offset-1">Product detail</h2>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="breadcrumb__links">
                    <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a asp-area="" asp-controller="Shop" asp-action="GetAllCategories">Shop</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Shop Details Section Begin -->
<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="product__details__img">
                    <div class="product__details__big__img">
                        <img class="big_img" src="@Model.Picture" alt="dessert-picture">
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="product__details__text">
                    <a id="category-id" class="product__label" asp-area="" asp-controller="Shop" asp-action="GetAllCurrentCategory" asp-route-id="@Model.CategoryId">@Model.CategoryName</a>
                    <h4 class="text-uppercase">@Model.Name</h4>
                    <h5>$ @Model.Price</h5>
                    <p>
                        @Model.Description
                    </p>
                    <ul>
                        <li>Category: <span>@Model.CategoryName</span></li>
                        <li>Tags: <span>@string.Join(", ", Model.TagNames)</span></li>
                        <li>Main Ingredients: <span>@string.Join(", ", Model.IngredientNames)</span></li>
                    </ul>
                    <div class="product__details__option">
                        <div class="quantity">
                            <div class="pro-qty">
                                <input type="text" value="1">
                            </div>
                        </div>
                        <a href="#" class="primary-btn">Add to cart</a>
                        <a href="#" class="heart__btn"><span class="icon_heart_alt"></span></a>
                    </div>
                </div>
            </div>
        </div>
        <vc:dessert-reviews dessert-id="@Model.Id"></vc:dessert-reviews>
    </div>
</section>
<!-- Shop Details Section End -->
<!-- Related Products Section Begin -->
<vc:related-products category-id="@Model.CategoryId" tag-tag-names="@Model.TagNames"></vc:related-products>

