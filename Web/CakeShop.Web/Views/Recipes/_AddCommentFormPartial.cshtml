@using CakeShop.Web.ViewModels.Comments.InputModels;
@model AddCommentInputModel;

<a id="show-comment-form" class="primary-btn mb-3">Comment</a>
<div id="comment-form" class="col-lg-12 mb-5" style="display:none">
    <div class="contact__form">
        <form asp-area="" asp-controller="Comments" asp-action="Add" asp-route-id="@Model.Id" method="post">
            <div class="row">
                <div class="col-lg-12">
                    <textarea asp-for="@Model.Content" placeholder="Comment..."></textarea>
                    <span asp-validation-for="@Model.Content" class="text-danger"></span>
                    <br />
                    <button type="submit" class="site-btn">Leave a comment</button>
                </div>
            </div>
        </form>
    </div>
</div>
<hr />