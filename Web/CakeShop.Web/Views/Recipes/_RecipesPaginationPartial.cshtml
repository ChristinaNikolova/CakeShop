@using CakeShop.Web.ViewModels.Recipes.ViewModels;
@model AllRecipesViewModel;

<div id="pagination" class="shop__pagination">
    @if (this.Model.CurrentPage != 1)
    {
        <a asp-controller="Recipes" asp-action="GetAll"
           asp-route-currentPage="@(this.Model.PreviousPage)"><span class="arrow_carrot-left"></span></a>
    }

    @for (int i = 1; i <= Model.PagesCount; i++)
    {
        var active = i == this.Model.CurrentPage ? "active" : string.Empty;
        <a asp-controller="Recipes" asp-action="GetAll" asp-route-currentPage="@i" class="@active-pagination">@i</a>
    }

    @if (this.Model.CurrentPage != this.Model.PagesCount)
    {
        <a asp-controller="Recipes" asp-action="GetAll"
           asp-route-currentPage="@(this.Model.NextPage)"><span class="arrow_carrot-right"></span></a>
    }
</div>

