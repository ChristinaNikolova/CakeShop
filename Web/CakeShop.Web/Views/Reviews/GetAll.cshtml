@using CakeShop.Web.ViewModels.DessertOrders.ViewModels;
@model AllWaitingForReviewDessertsViewModel;

@{
    ViewData["Title"] = "Waiting For Review";
}

<partial name="_BreadCrumbPartial" />
<section class="wishlist spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="wishlist__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Price</th>
                                <th>Category</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="table-body">
                            @foreach (var dessert in Model.Desserts)
                            {
                                <tr>
                                    <td class="product__cart__item">
                                        <div class="product__cart__item__pic">
                                            <img class="small-pic" src="@dessert.DessertPicture" alt="dessert">
                                        </div>
                                        <div class="product__cart__item__text">
                                            <a asp-area="" asp-controller="Shop" asp-action="DessertDetails" asp-route-id="@dessert.DessertId"><h6>@dessert.DessertName</h6></a>
                                        </div>
                                    </td>
                                    <td class="cart__price">$ @dessert.DessertPrice</td>
                                    <td class="cart__btn"><a asp-area="" asp-controller="Shop" asp-action="GetAllCurrentCategory" asp-route-id="@dessert.DessertCategoryId" class="color-black">@dessert.DessertCategoryName</a></td>
                                    <td class="cart__btn">
                                        <a asp-area="" asp-controller="Orders" asp-action="GetOrderDetails" asp-route-id="@dessert.OrderId" class="site-btn">See order</a>
                                    </td>
                                    <td class="cart__btn">
                                        <a asp-area="" asp-controller="Reviews" asp-action="Add" asp-route-dessertId="@dessert.DessertId" asp-route-orderId="@dessert.OrderId" class="site-btn">Review</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>